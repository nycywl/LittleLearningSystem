@using System.Data;

@model LittleLearningSystem.Models.Enroll

@{
    DataTable dt = ViewData["Enroll"] as DataTable;
}

<h1>Enroll Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Student Email</th>
            <th>Student Department</th>
        </tr>
    </thead>
    <tbody>
        @if (dt != null)
        {
            foreach (DataRow enroll in dt.Rows)
            {
                <tr>
                    <td>@enroll["StudentID"]</td>
                    <td>@enroll["StudentName"]</td>
                    <td>@enroll["Email"]</td>
                    <td>@enroll["Department"]</td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Course List</a>
</div>
